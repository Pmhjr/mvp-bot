{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python signal-render.py",
    "restartPolicy": {
      "type": "ON_FAILURE",
      "maxRetries": 10
    },
    "cron": {
      "schedule": "*/30 * * * *",
      "timezone": "UTC"
    }
  }
}
